{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "build",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["mocha", "node", "chai-http", "chai"],
    "strictNullChecks": false,
    "allowJs": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true
  },
  "include": ["src/**/*.ts", "src/tests/**/*.ts", "src/tests/incident.test.js"]
}
